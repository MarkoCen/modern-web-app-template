{
  "extends": "@pkg/ts-config/tsconfig.next.json",
  "compilerOptions": {
    "moduleResolution": "Node",
    "paths": {
      "@gql/*": ["./graphql/codegen/*"],
      "@graphql/*": ["./graphql/*"],
      "@store": ["./store/index.ts"],
      "@store/*": ["./store/*"],
      "@components/*": ["./components/*"],
      "@services/*": ["./services/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "../../packages/graphql/custom.d.ts"
  ],
  "exclude": ["node_modules", ".next"]
}
